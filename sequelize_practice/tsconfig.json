{
  "ts-node": { "files": true },
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],

    /* Modules */
    "module": "commonjs",

    "moduleResolution": "node",
    "types": [],

    /* JavaScript Support */
    "allowJs": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src", "models"],
  "exclude": ["**/node_modules", "**/.*/"]
}
